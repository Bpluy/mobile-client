<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobCl.RegisterPage"
             Title="Регистрация">
    <VerticalStackLayout Margin="20">
        <Entry Placeholder="Введите логин"
               Margin="20,70,20,10"
               VerticalOptions="Center"
               HorizontalTextAlignment="Center"
               VerticalTextAlignment="Center"
               TextChanged="Login_Changed"
               />
        <Entry Placeholder="Введите пароль"
               Margin="20, 10, 20, 10"
               VerticalOptions="Center"
               HorizontalTextAlignment="Center"
               VerticalTextAlignment="Center"
               TextChanged="Password_Changed"
               IsPassword="True"
               />
        <Entry Placeholder="Повторите пароль"
               Margin="20, 10, 20, 10"
               VerticalOptions="Center"
               HorizontalTextAlignment="Center"
               VerticalTextAlignment="Center"
               TextChanged="RePassword_Changed"
               IsPassword="True"
               />
        <Button Text="Зарегистрироваться"
                Clicked="Register_Clicked"
                Margin="20, 10, 20, 0"/>
    </VerticalStackLayout>
</ContentPage>